<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:top="5dp">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Foreground -->
    <item
        android:bottom="5dp"
        android:right="3dp"
        android:left="3dp">
        <shape>
            <solid android:color="@color/purple" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>